<?xml version="1.0" ?>
<!-- Test 9: Multiple transmitters and receivers -->
<!DOCTYPE simulation SYSTEM "../../xml_schema/fers-xml.dtd">
<simulation name="sim1">
    <parameters>
        <starttime>0</starttime>
        <endtime>20</endtime>
        <rate>1e8</rate>
        <export binary="true" xml="false" csv="true"/>
    </parameters>

    <pulse name="pulse" type="file" filename="waveform.csv">
        <power>1000</power>
        <carrier>1e9</carrier>
    </pulse>

    <timing name="clock">
        <frequency>10e6</frequency>
    </timing>

    <antenna name="ant" pattern="isotropic">
    </antenna>

    <platform name="trans1">
        <motionpath>
            <positionwaypoint>
                <x>-500</x>
                <y>-500</y>
                <altitude>0</altitude>
                <time>0</time>
            </positionwaypoint>
        </motionpath>
        <fixedrotation>
            <startazimuth>0</startazimuth>
            <startelevation>0</startelevation>
            <azimuthrate>0</azimuthrate>
            <elevationrate>0</elevationrate>
        </fixedrotation>
        <transmitter name="trans1" type="pulsed" antenna="ant" pulse="pulse" timing="clock">
            <prf>10</prf>
        </transmitter>
    </platform>

    <platform name="trans2">
        <motionpath>
            <positionwaypoint>
                <x>0</x>
                <y>500</y>
                <altitude>0</altitude>
                <time>0</time>
            </positionwaypoint>
        </motionpath>
        <fixedrotation>
            <startazimuth>0</startazimuth>
            <startelevation>0</startelevation>
            <azimuthrate>0</azimuthrate>
            <elevationrate>0</elevationrate>
        </fixedrotation>
        <transmitter name="trans2" type="pulsed" antenna="ant" pulse="pulse" timing="clock">
            <prf>10</prf>
        </transmitter>
    </platform>

    <platform name="trans3">
        <motionpath>
            <positionwaypoint>
                <x>500</x>
                <y>-500</y>
                <altitude>0</altitude>
                <time>0</time>
            </positionwaypoint>
        </motionpath>
        <fixedrotation>
            <startazimuth>0</startazimuth>
            <startelevation>0</startelevation>
            <azimuthrate>0</azimuthrate>
            <elevationrate>0</elevationrate>
        </fixedrotation>
        <transmitter name="trans3" type="pulsed" antenna="ant" pulse="pulse" timing="clock">
            <prf>10</prf>
        </transmitter>
    </platform>

    <platform name="recv1">
        <motionpath>
            <positionwaypoint>
                <x>400</x>
                <y>400</y>
                <altitude>0</altitude>
                <time>0</time>
            </positionwaypoint>
        </motionpath>
        <fixedrotation>
            <startazimuth>0</startazimuth>
            <startelevation>0</startelevation>
            <azimuthrate>0</azimuthrate>
            <elevationrate>0</elevationrate>
        </fixedrotation>
        <receiver name="recv1" antenna="ant" timing="clock">
            <window_skip>5e-6</window_skip>
            <window_length>1e-5</window_length>
            <prf>10</prf>
        </receiver>
    </platform>

    <platform name="recv2">
        <motionpath>
            <positionwaypoint>
                <x>0</x>
                <y>-400</y>
                <altitude>0</altitude>
                <time>0</time>
            </positionwaypoint>
        </motionpath>
        <fixedrotation>
            <startazimuth>0</startazimuth>
            <startelevation>0</startelevation>
            <azimuthrate>0</azimuthrate>
            <elevationrate>0</elevationrate>
        </fixedrotation>
        <receiver name="recv2" antenna="ant" timing="clock">
            <window_skip>5e-6</window_skip>
            <window_length>1e-5</window_length>
            <prf>10</prf>
        </receiver>
    </platform>

    <platform name="recv3">
        <motionpath>
            <positionwaypoint>
                <x>-400</x>
                <y>400</y>
                <altitude>0</altitude>
                <time>0</time>
            </positionwaypoint>
        </motionpath>
        <fixedrotation>
            <startazimuth>0</startazimuth>
            <startelevation>0</startelevation>
            <azimuthrate>0</azimuthrate>
            <elevationrate>0</elevationrate>
        </fixedrotation>
        <receiver name="recv3" antenna="ant" timing="clock">
            <window_skip>5e-6</window_skip>
            <window_length>1e-5</window_length>
            <prf>10</prf>
        </receiver>
    </platform>

    <platform name="aeroplane">
        <motionpath interpolation="cubic">
            <positionwaypoint>
                <x>0</x>
                <y>-1500</y>
                <altitude>1000</altitude>
                <time>0</time>
            </positionwaypoint>
            <positionwaypoint>
                <x>0</x>
                <y>0</y>
                <altitude>1000</altitude>
                <time>5</time>
            </positionwaypoint>
            <positionwaypoint>
                <x>0</x>
                <y>1500</y>
                <altitude>800</altitude>
                <time>10</time>
            </positionwaypoint>
        </motionpath>
        <fixedrotation>
            <startazimuth>0</startazimuth>
            <startelevation>0</startelevation>
            <azimuthrate>0</azimuthrate>
            <elevationrate>0</elevationrate>
        </fixedrotation>
        <target name="wings">
            <rcs type="isotropic">
                <value>100</value>
            </rcs>
        </target>
    </platform>

    <platform name="helicopter">
        <motionpath interpolation="linear">
            <positionwaypoint>
                <x>-1500</x>
                <y>0</y>
                <altitude>1000</altitude>
                <time>0</time>
            </positionwaypoint>
            <positionwaypoint>
                <x>-100</x>
                <y>100</y>
                <altitude>500</altitude>
                <time>5</time>
            </positionwaypoint>
            <positionwaypoint>
                <x>1200</x>
                <y>0</y>
                <altitude>0</altitude>
                <time>10</time>
            </positionwaypoint>
        </motionpath>
        <rotationpath interpolation="cubic">
            <rotationwaypoint>
                <azimuth>0</azimuth>
                <elevation>0</elevation>
                <time>0</time>
            </rotationwaypoint>
            <rotationwaypoint>
                <azimuth>90</azimuth>
                <elevation>0</elevation>
                <time>5</time>
            </rotationwaypoint>
            <rotationwaypoint>
                <azimuth>180</azimuth>
                <elevation>0</elevation>
                <time>10</time>
            </rotationwaypoint>
        </rotationpath>
        <target name="heli">
            <rcs type="isotropic">
                <value>50</value>
            </rcs>
        </target>
    </platform>
</simulation>