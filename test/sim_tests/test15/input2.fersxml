<?xml version="1.0" ?>
<!-- Test pulsed radar. One Monostatic radar and one moving target -->
<!DOCTYPE simulation SYSTEM "../../xml_schema/fers-xml.dtd">
<simulation name="sim1">

    <pulse name="pulse2" type="file" filename="waveform.csv">
        <power>1000</power>
        <carrier>1e9</carrier>
    </pulse>

    <antenna name="ant2" pattern="isotropic">
    </antenna>

    <platform name="radarsite2">
        <motionpath>
            <positionwaypoint>
                <x>10.0</x>
                <y>0.0</y>
                <altitude>0.0</altitude>
                <time>0</time>
            </positionwaypoint>
        </motionpath>
        <fixedrotation>
            <startazimuth>0.0</startazimuth>
            <startelevation>0</startelevation>
            <azimuthrate>0</azimuthrate>
            <elevationrate>0</elevationrate>
        </fixedrotation>
        <monostatic name="mono2" type="pulsed" antenna="ant2" pulse="pulse2" timing="clock">
            <window_skip>0</window_skip>
            <window_length>10e-5</window_length>
            <prf>10000</prf>
        </monostatic>
    </platform>

    <platform name="aeroplane2">
        <motionpath interpolation="linear">
            <positionwaypoint>
                <x>3000.0</x>
                <y>0.0</y>
                <altitude>100.0</altitude>
                <time>0</time>
            </positionwaypoint>
            <positionwaypoint>
                <x>0.0</x>
                <y>0.0</y>
                <altitude>100.0</altitude>
                <time>1</time>
            </positionwaypoint>
            <positionwaypoint>
                <x>-3400.0</x>
                <y>0.0</y>
                <altitude>100.0</altitude>
                <time>0.002</time>
            </positionwaypoint>
        </motionpath>
        <fixedrotation>
            <startazimuth>0.0</startazimuth>
            <startelevation>0.0</startelevation>
            <azimuthrate>0</azimuthrate>
            <elevationrate>0</elevationrate>
        </fixedrotation>
        <target name="wings">
            <rcs type="isotropic">
                <value>10</value>
            </rcs>
        </target>
    </platform>
</simulation>
