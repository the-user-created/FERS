<!-- Test case for CW simulation - a moving transmitter and a number of receivers -->
<?xml version="1.0" ?>
<!DOCTYPE simulation SYSTEM "../../fers-xml.dtd">

<simulation name="sim1">
  <parameters>
    <starttime>0</starttime>
    <endtime>3</endtime>
    <interprate>1000</interprate> <!-- Sample rate of results -->
  </parameters>

  <waveform name="pulse1" type="mono">
    <power>100</power> <!-- Transmitter Power (Watts) -->
    <carrier>1e6</carrier> <!-- Frequency of mono waveform -->
  </waveform>

  <antenna name="ant1" pattern="isotropic">
  </antenna>

  <!-- Each target, receiver and transmitter must be attached to a platform -->
  <platform name="balloon">
    <motionpath interpolation="cubic"> <!-- Moving, with cubic interpolation -->
      <positionwaypoint>
	<x>50.0</x>
	<y>50.0</y>
	<altitude>0.0</altitude>
	<time>0</time>
      </positionwaypoint>
      <positionwaypoint>
	<x>45.0</x>
	<y>45.0</y>
	<altitude>75.0</altitude>
	<time>1.0</time>
      </positionwaypoint>
      <positionwaypoint>
	<x>40</x>
	<y>40</y>
	<altitude>200.0</altitude>
	<time>2.0</time>
      </positionwaypoint>
      <positionwaypoint>
	<x>35</x>
	<y>35</y>
	<altitude>375.0</altitude>
	<time>3.0</time>
      </positionwaypoint>
    </motionpath>
    <fixedrotation>
      <startazimuth>0.0</startazimuth>
      <startelevation>0.0</startelevation>
      <azimuthrate>0</azimuthrate>
      <elevationrate>0</elevationrate>
    </fixedrotation>
    <transmitter name="mono1" type="continuous" antenna="ant1" pulse="pulse1">
      <prf>1000</prf>
    </transmitter>
  </platform>

  <platform name="site1">
    <motionpath>
      <positionwaypoint> <!-- Not moving -->
	<x>0.0</x>
	<y>0.0</y>
	<altitude>0.0</altitude>
	<time>0</time>
      </positionwaypoint>
    </motionpath>    
    <fixedrotation>
      <startazimuth>0.0</startazimuth>
      <startelevation>0.0</startelevation>
      <azimuthrate>0</azimuthrate>
      <elevationrate>0</elevationrate>
    </fixedrotation>
    <receiver name="recv_site1" antenna="ant1" />
  </platform>

  <platform name="site2">
    <motionpath>
      <positionwaypoint>
	<x>100.0</x>
	<y>100.0</y>
	<altitude>0.0</altitude>
	<time>0</time>
      </positionwaypoint>
    </motionpath>    
    <fixedrotation>
      <startazimuth>0.0</startazimuth>
      <startelevation>0.0</startelevation>
      <azimuthrate>0</azimuthrate>
      <elevationrate>0</elevationrate>
    </fixedrotation>
    <receiver name="recv_site2" antenna="ant1" />
  </platform>
  
</simulation>
